-- Variables
local isRunning = false
local originalTrainValue = 0
local connectionLoop = nil

-- Functions
local function formatNumber(num)
    local suffixes = {"", "K", "M", "B", "T", "Qa", "Qi", "Sx", "Sp", "Oc", "No", "Dc", "Ud", "Dd", "Td", "Qad", "Qid", "Sxd", "Spd", "Ocd", "Nod", "Vg", "Uvg"}
    local tier = math.floor(math.log10(num) / 3)
    
    if tier <= 0 then
        return tostring(math.floor(num))
    end
    
    local suffix = suffixes[math.min(tier + 1, #suffixes)] or "âˆž"
    local scale = math.pow(10, tier * 3)
    local scaled = num / scale
    
    return string.format("%.2f%s", scaled, suffix)
end

local function applyExtremeMultiplier()
    if not isRunning then return end
    
    local multiplier = tonumber(MultiplierInput.Text) or 1000000000000
    
    -- Apply buff items with extreme values
    local buffItems = {
        {id = 18, buffType = "1"}, -- Arms
        {id = 19, buffType = "2"}, -- Back  
        {id = 20, buffType = "3"}, -- Legs
        {id = 21, buffType = "4"}  -- Agility
    }
    
    for _, item in ipairs(buffItems) do
        pcall(function()
            local TryOperatingItem = ReplicatedStorage.PlayerItemBackpack.Remote.TryOperatingItemByPlayer
            TryOperatingItem:InvokeServer(
                {
                    GridInfo = {Id = item.id, Num = 1},
                    GridIndex = "401"
                },
                item.id,
                1,
                {Operation = "UseItem", PointingOperation = "UseSingleBuffConsum"}
            )
        end)
        task.wait(0.1)
    end
    
    -- Apply extreme training values
    pcall(function()
        local PlayerTrainValueHasChanged = ReplicatedStorage.TrainSystem.Bindable.PlayerTrainValueHasChanged
        local extremeValue = multiplier * 1000000
        
        PlayerTrainValueHasChanged:Fire(
            LocalPlayer,
            1,
            extremeValue,
            extremeValue - 1000
        )
    end)
    
    -- Update Combat Power with extreme value
    task.wait(0.2)
    pcall(function()
        local PlayerCombatPowerHasChanged = ReplicatedStorage.TrainSystem.Remote.PlayerCombatPowerHasChanged
        local extremeCombatPower = multiplier * 5000000
        
        firesignal(PlayerCombatPowerHasChanged.OnClientEvent, LocalPlayer, extremeCombatPower)
        
        StatusLabel.Text = string.format("Status: ACTIVE âœ“\nCombat Power: %s", formatNumber(extremeCombatPower))
    end)
end

local function startTraining()
    if isRunning then return end
    
    isRunning = true
    StartButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    StatusLabel.Text = "Status: Starting extreme training..."
    StatusLabel.TextColor3 = Color3.fromRGB(255, 215, 0)
    
    -- Initial application
    applyExtremeMultiplier()
    
    -- Continuous loop
    connectionLoop = game:GetService("RunService").Heartbeat:Connect(function()
        if isRunning then
            task.spawn(applyExtremeMultiplier)
        end
    end)
    
    task.wait(1)
    StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
end

local function stopTraining()
    isRunning = false
    
    if connectionLoop then
        connectionLoop:Disconnect()
        connectionLoop = nil
    end
    
    StartButton.BackgroundColor3 = Color3.fromRGB(50, 200, 80)
    StatusLabel.Text = "Status: Stopped\nCombat Power: Check in-game"
    StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
end

-- Button Connections
StartButton.MouseButton1Click:Connect(startTraining)
StopButton.MouseButton1Click:Connect(stopTraining)

MinimizeButton.MouseButton1Click:Connect(function()
    ContentFrame.Visible = not ContentFrame.Visible
    if ContentFrame.Visible then
        MainFrame.Size = UDim2.new(0, 400, 0, 300)
        MinimizeButton.Text = "_"
    else
        MainFrame.Size = UDim2.new(0, 400, 0, 40)
        MinimizeButton.Text = "â–¡"
    end
end)

CloseButton.MouseButton1Click:Connect(function()
    stopTraining()
    ScreenGui:Destroy()
end)

-- Add hover effects
local function addHoverEffect(button, normalColor, hoverColor)
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = hoverColor
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = normalColor
    end)
end

addHoverEffect(StartButton, Color3.fromRGB(50, 200, 80), Color3.fromRGB(70, 220, 100))
addHoverEffect(StopButton, Color3.fromRGB(200, 50, 50), Color3.fromRGB(220, 70, 70))
addHoverEffect(MinimizeButton, Color3.fromRGB(255, 170, 0), Color3.fromRGB(255, 190, 50))
addHoverEffect(CloseButton, Color3.fromRGB(220, 50, 50), Color3.fromRGB(240, 70, 70))

-- Parent to CoreGui for protection
if gethui then
    ScreenGui.Parent = gethui()
elseif syn and syn.protect_gui then
    syn.protect_gui(ScreenGui)
    ScreenGui.Parent = game:GetService("CoreGui")
else
    ScreenGui.Parent = game:GetService("CoreGui")
end

